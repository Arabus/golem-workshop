{% if cloud_provider == 'openstack' %}
[Global]
auth-url = "{{ lookup('env', 'OS_AUTH_URL') }}"
username = "{{ lookup('env', 'OS_USERNAME') }}"
password = "{{ lookup('env', 'OS_PASSWORD') }}"
domain-name = "{{ lookup('env', 'OS_USER_DOMAIN_NAME') | default('Default') }}"
tenant-id = "{{ lookup('env', 'OS_PROJECT_ID') }}"
region = "{{ lookup('env', 'OS_REGION_NAME') }}"

[BlockStorage]
trust-device-path = false
bs-version = "v2"

[LoadBalancer]
manage-security-groups = true
{% endif %}
{% if cloud_provider == 'aws' %}
[Global]
KubernetesClusterTag=kubernetes
KubernetesClusterID=kubernetes
{% endif %}
